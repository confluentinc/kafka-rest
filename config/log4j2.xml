<?xml version="1.0" ?>
<Configuration name="Log4j2">
    <Appenders>
        <RollingFile name="file" fileName="/kafka-rest.log" filePattern="/kafka-rest.log.%i">
            <PatternLayout pattern="[%d] %v1Level %m (%c)%n"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="10485760"/>
            </Policies>
            <DefaultRolloverStrategy max="1" fileIndex="min"/>
        </RollingFile>
        <Console name="stdout" target="SYSTEM_OUT">
            <PatternLayout pattern="[%d] %v1Level %m (%c:%L)%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="file"/>
            <AppenderRef ref="stdout"/>
        </Root>
    </Loggers>
</Configuration>